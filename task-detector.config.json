{
  "$schema": "./scripts/task-detector/schema.json",
  "sources": {
    "codeComments": {
      "enabled": true,
      "patterns": ["TODO", "FIXME", "XXX", "HACK"],
      "globs": ["src/**/*.ts", "src/**/*.vue", "src/**/*.tsx", "scripts/**/*.ts"],
      "excludeGlobs": ["**/*.test.ts", "**/*.spec.ts", "**/node_modules/**", "scripts/task-detector/**"]
    },
    "projectTasks": {
      "enabled": true,
      "directories": ["todo", "in_progress"],
      "tasksPath": "project/tasks"
    },
    "failingChecks": {
      "enabled": true,
      "commands": [
        { "id": "test", "command": "npm run test", "timeoutMs": 60000 },
        { "id": "typecheck", "command": "npm run typecheck", "timeoutMs": 15000 }
      ]
    },
    "taskQueueFile": {
      "enabled": false,
      "path": ".task-queue.txt"
    },
    "githubIssues": {
      "enabled": false,
      "owner": null,
      "repo": null
    }
  },
  "priority": ["projectTasks", "failingChecks", "codeComments", "taskQueueFile", "githubIssues"],
  "log": {
    "idleMessage": "[task-driven] Idle. No tasks. No LLM call.",
    "actMessage": "[task-driven] Acting. {count} task(s) found. Generating prompt."
  }
}
